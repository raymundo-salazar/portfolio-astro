---
import type { HeroSocialIconProps } from "./types"

const { url, name, icon: Icon } = Astro.props as HeroSocialIconProps
---

<a
	href={url}
	aria-label={name}
	class="p-3 bg-neutral-800 hover:bg-blue-600 rounded-lg transition-all duration-300 transform hover:scale-110 hover:shadow-lg"
	target="_blank"
>
	<Icon className="h-5 w-5" />
</a>
