---
import type { ContactInfoCardProps } from "./types"

const { icon: Icon, title, details, href } = Astro.props as ContactInfoCardProps
---

<a
	href={href}
	class="group flex items-center p-4 bg-neutral-800 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1"
>
	<div
		class="p-3 bg-blue-900 text-blue-400 rounded-lg mr-4 group-hover:bg-blue-600 group-hover:text-white transition-colors"
	>
		<Icon class="h-6 w-6" />
	</div>
	<div>
		<h4 class="font-semibold text-white group-hover:text-blue-400 transition-colors">
			{title}
		</h4>
		<p class="text-gray-300">{details}</p>
	</div>
</a>
