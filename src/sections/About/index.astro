---
import { HIGHLIGHTS, SKILLS } from "./constants"
import AboutCard from "@/components/molecules/AboutCard/index.astro"
import { useTranslation } from "@/i18n"

const currentLang = Astro.params.lang || "es"
const t = useTranslation(currentLang as "es" | "en")
---

<section id="about" class="py-20 bg-neutral-800">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">{t.about.title}</h2>
			<div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
		</div>

		<div class="grid lg:grid-cols-2 gap-12 items-center">
			<div class="space-y-6">
				<p class="text-lg text-gray-300 leading-relaxed">
					{
						t.about.description.replaceAll(
							"{{YEARS}}",
							(new Date().getFullYear() - 2013).toString()
						)
					}
				</p>
				<p class="text-lg text-gray-300 leading-relaxed">{t.about.description2}</p>

				<div class="flex flex-wrap gap-3 mt-8">
					{
						SKILLS.map(skill => (
							<span class="px-4 py-2 bg-blue-900 text-blue-200 rounded-full text-sm font-medium">
								{skill}
							</span>
						))
					}
				</div>
			</div>

			<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
				{
					HIGHLIGHTS.map(({ icon: Icon, key }) => (
						<AboutCard
							title={t.about.cards[key as keyof typeof t.about.cards].title}
							description={
								t.about.cards[key as keyof typeof t.about.cards].description
							}
							icon={Icon}
						/>
					))
				}
			</div>
		</div>
	</div>
</section>
