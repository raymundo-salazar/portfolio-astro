---
import Layout from "@/layouts/index.astro"
import Header from "@/sections/Header/index.astro"
import { useTranslation } from "@/i18n"
import { House } from "@lucide/astro"

const pathname = Astro.url.pathname
const match = pathname.match(/^\/(es|en)(\/|$)/)
const currentLang = match ? match[1] : "es"
const t = useTranslation(currentLang as "es" | "en")
---

<Layout>
	<Header lang={currentLang} />
	<section
		id="home"
		class="min-h-screen flex items-center justify-center bg-linear-to-br from-neutral-900 via-neutral-800 to-neutral-900 pt-20"
	>
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<div class="animate-fade-in-up">
				<h1
					class="text-9xl md:text-[12rem] font-bold text-transparent bg-linear-to-r from-blue-700 to-cyan-600 bg-clip-text leading-none"
				>
					404
				</h1>
				<h2 class="text-4xl sm:text-5xl font-extrabold text-white mb-6">
					{t.notFound.title}
				</h2>
				<p class="text-white mb-6 w-full max-w-2xl mx-auto">
					{t.notFound.text}
				</p>
				<div
					class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6 mb-12"
				>
					<a
						href={`/${currentLang}`}
						class="group bg-blue-600 text-white px-8 py-4 rounded-full font-semibold transition-all duration-300 transform shadow-lg flex items-center gap-2 hover:scale-105"
					>
						<House
							class="w-5 h-5 text-white group-hover:scale-110 transition-transform"
						/>
						{t.notFound.goHome}
					</a>
				</div>

				{/* Floating elements for visual interest */}
				<div
					class="absolute top-20 left-10 w-20 h-20 opacity-10 animate-float bg-neutral-600 rounded-full"
				>
				</div>
				<div
					class="absolute top-40 right-20 w-16 h-16 opacity-15 animate-float-delayed bg-blue-900 rounded-full"
				>
				</div>
				<div
					class="absolute bottom-20 left-1/4 w-12 h-12 opacity-20 animate-float bg-blue-800 rounded-full"
				>
				</div>
			</div>
		</div>
	</section>
</Layout>
