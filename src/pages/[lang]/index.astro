---
import Layout from "@/layouts/index.astro"

import Hero from "@/sections/Hero/index.astro"
import Header from "@/sections/Header/index.astro"
import About from "@/sections/About/index.astro"
import Skills from "@/sections/Skills/index.astro"
import Timeline from "@/sections/Timeline/index.astro"
import Projects from "@/sections/Projects/index.astro"
import Contact from "@/sections/Contact/index.astro"
import Footer from "@/sections/Footer/index.astro"

import "@/styles/global.css"
import { languages } from "@/i18n"

export function getStaticPaths() {
	return Object.keys(languages).map(lang => ({
		params: { lang },
	}))
}
---

<Layout>
	<Header />
	<Hero />
	<About />
	<Skills />
	<Timeline />
	<Projects />
	<Contact />
	<Footer />
</Layout>
